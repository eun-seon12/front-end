// 실습문제 6번
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        .radius {
	        width: 160px;
	        height: 160px;
            background: #CA785C;
            border-radius: 9999px;
    }
        .text {
            width: 160px;
            height: 195px;
            font-size: 16px;
            /* line-height: 100%; */
            background: white;
            color: black;
            text-align: center;
            margin-top: 16px;
            font-weight: bold;
        }


    </style>
</head>
<body>
    <div class="radius"></div>
    <div class="text">프로필</div>
</body>
</html>

