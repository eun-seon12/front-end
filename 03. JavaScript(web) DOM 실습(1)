// 2번
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>

    <u1 id="food">
        <li>파스타</li>
        <li>피자</li>
    </u1>

    <script>
        const $food = document.getElementById('food');

        $food.removeChild($food.lastElementChild);
    
    </script>
</body>
</html>
